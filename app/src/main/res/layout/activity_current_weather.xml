<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@color/honeyFlower_bg"
                tools:context=".CurrentWeatherActivity">

    <ImageButton
        android:id="@+id/refreshIb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/refresh"/>

    <ProgressBar
        android:id="@+id/refreshPb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/refreshIb"
        android:layout_alignBottom="@id/refreshIb"
        android:layout_alignLeft="@id/refreshIb"
        android:layout_alignRight="@id/refreshIb"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/placeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/refreshIb"
        android:layout_marginTop="64dp"
        android:textSize="20sp"
        android:textColor="@android:color/primary_text_dark"
        android:text="Place"/>

    <TextView
        android:id="@+id/temperatureTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="100sp"
        android:textColor="@android:color/primary_text_dark"
        android:text="--"/>

    <TextView
        android:id="@+id/minusSymbolTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/temperatureTv"
        android:layout_centerVertical="true"
        android:paddingRight="5dp"
        android:textSize="100sp"
        android:textColor="@android:color/primary_text_dark"
        android:text="-"/>

    <TextView
        android:id="@+id/degreeSymbolTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/temperatureTv"
        android:layout_alignTop="@id/temperatureTv"
        android:textSize="100sp"
        android:textColor="@android:color/primary_text_dark"
        android:text="\u00B0"/>
</RelativeLayout>
