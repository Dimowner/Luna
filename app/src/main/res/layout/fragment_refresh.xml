<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.hochland386.luna.fragments.RefreshFragment"
             tools:background="@color/honeyFlower_bg">

    <ImageButton
        android:id="@+id/fragmentRefreshIb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/refresh"/>

    <ProgressBar
        android:id="@+id/fragmentRefreshPb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/fragmentRefreshIb"
        android:layout_alignBottom="@id/fragmentRefreshIb"
        android:layout_alignLeft="@id/fragmentRefreshIb"
        android:layout_alignRight="@id/fragmentRefreshIb"
        android:visibility="invisible"/>

</RelativeLayout>
